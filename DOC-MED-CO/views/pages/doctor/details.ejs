<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DOC-MED-CO | Personal Details</title>
  <link href="../header.css" rel="stylesheet" type="text/css" />
  <link href="../sidenav.css" rel="stylesheet" type="text/css" />
  <link href="../tables.css" rel="stylesheet" type="text/css" />
</head>

<header>
  <div class='main'>
    <%- include('../../partials/doctor/header') %>
  </div>
</header>

<body>
  <% if(details.status) {
    if(details.status === 'registered' || details.status === 'pending') { %>
  <%- include('../../partials/doctor/pendingSidenav') -%>
  <% } else if(details.status === 'approved') { %>
  <%- include('../../partials/doctor/approvedSidenav') -%>
  <% }
  } %>

  <div class='main'>
    <h1><center><i>Doctor Medical Collaboration</i></center></h1>
    <br>
    <h2>My Personal Details</h2>
    <br>
    <table>
      <tr>
        <td>
          Name
        </td>
        <td> <%= details.name %> </td>
      </tr>
      <tr>
        <td>
          Email
        </td>
        <td> <%= details.email %> </td>
      </tr>
      <% if (details.degree && details.startTime && details.endTime && details.experienceFrom && details.appointmentFee) { %>
      <tr>
        <td>
          Degree
        </td>
        <td> <%= details.degree %> </td>
      </tr>
      <tr>
        <td>
          Start Time
        </td>
        <td> <%= details.startTime %> </td>
      </tr>
      <tr>
        <td>
          End Time
        </td>
        <td> <%= details.endTime %> </td>
      </tr>
      <tr>
        <td>
          Experienced From
        </td>
        <td> <%= details.experienceFrom %> </td>
      </tr>
      <tr>
        <td>
          Specialization
        </td>
        <td> <%= details.specialization%> </td>
      </tr>
      <tr>
        <td>

          appointmentFee
        </td>
        <td> <%= details.appointmentFee %> </td>
      </tr>
      <% } else { %>
      <form action="/doctor/details" method="POST">
        <tr>
          <td>
            Start Time
          </td>
          <td> <input type="number" name="startTime" required="required" placeholder="24 hour format"></td>
        </tr>
        <tr>
          <td>
            End Time
          </td>
          <td> <input type="number" name="endTime" required="required" placeholder="24 hour format"></td>
        </tr>
        <tr>
          <td>
            Experienced From
          </td>
          <td> <input type="datetime" name="experienceFrom" required="required" placeholder="mm/dd/yyyy">
          </td>
        </tr>
        <tr>
          <td>
            Specialization
          </td>
          <td> <input type="text" name="specialization" required="requires"> </td>
        </tr>
        <tr>
          <td>
            Degree
          </td>
          <td> <input type="text" name="degree" required="required" , placeholder="Higher degree"></td>
        </tr>
        <tr>
          <td>
            Appointment Fee
          </td>
          <td> <input type="number" name="appointmentFee" required="required"></td>
        </tr>
        <tr>
          <td>
            <br>
            <button type="submit">Submit</button>
      </form>
      <% } %>
    </table>
  </div>

</body>

</html>
